      <description />
      <argument type='java.lang.Object' />
    </method>
    <method name='clear' artefact='Domain' type='org.zkoss.zul.Listbox'>
      <description />
    </method>
    <method name='setModel' artefact='Domain' type='org.zkoss.zul.Listbox'>
      <description />
      <argument type='java.lang.Object' />
    </method>
    <method name='getModel' artefact='Domain' type='org.zkoss.zul.Listbox'>
      <description />
